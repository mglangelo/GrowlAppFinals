<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mglangelo.com.growlapp.MyActivity3"
    tools:ignore="MergeRootFrame" >



    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/becarios_logo"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:text="The applicant should be a Thomasian scholar at the time of application (Santo Tomas and San Martin Scholars are considered ACTIVE members while San Lorenzo Ruiz and Santo Domingo de Guzman scholars are considered as VOLUNTARY members)."
        android:textSize="10dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="21dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:text="Becarios de Santo Tomas is the university-wide, sole scholars organization of the University of Santo Tomas, composed of over 800 members duly recognized by the university, under the guidance of the Office for Student Affairs."
        android:textSize="12dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:text="Requirements:"
        android:textSize="10dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignUp Fee: Php. 100.00"
        android:id="@+id/textView6"
        android:textSize="10dp"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/textView7"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: N/A | Facebook: /becariosdesantotomas"
        android:id="@+id/textView7"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginBottom="29dp" />


</RelativeLayout>
