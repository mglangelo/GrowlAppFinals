<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame"
    android:background="#ffffffff">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Recognized University Wide Organizations AY 14'-15'"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

        
    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/aiesec_org"
        android:id="@+id/imgbtn_aiesec"
        android:onClick="aiesecorg"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />



    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/becarios_logo"
        android:id="@+id/imgbtn_becarios"
        android:layout_alignTop="@+id/imgbtn_aiesec"
        android:layout_centerHorizontal="true"
        android:onClick="becarios"/>

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/cht_logo"
        android:id="@+id/imgbtn_cht"
        android:layout_alignTop="@+id/imgbtn_becarios"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:onClick="cht"/>

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/comach_logo"
        android:id="@+id/imgbtn_comach"
        android:onClick="comach"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/imgbtn_aiesec"
        android:layout_alignLeft="@+id/imgbtn_aiesec"
        android:layout_alignStart="@+id/imgbtn_aiesec" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/cya_logo"
        android:id="@+id/imgbtn_cya"
        android:onClick="cya"
        android:layout_alignTop="@+id/imgbtn_comach"
        android:layout_alignLeft="@+id/imgbtn_becarios"
        android:layout_alignStart="@+id/imgbtn_becarios" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/earthust_logo"
        android:id="@+id/imgbtn_earth"
        android:layout_alignTop="@+id/imgbtn_cya"
        android:layout_alignLeft="@+id/imgbtn_cht"
        android:layout_alignStart="@+id/imgbtn_cht"
        android:onClick="earthust"/>

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/euust_logo"
        android:id="@+id/imgbtn_euust"
        android:onClick="euust"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/imgbtn_comach"
        android:layout_alignLeft="@+id/imgbtn_comach"
        android:layout_alignStart="@+id/imgbtn_comach" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/fma_logo"
        android:id="@+id/imgbtn_fma"
        android:onClick="fma"
        android:layout_alignTop="@+id/imgbtn_euust"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/fotomasino_logo"
        android:id="@+id/imgbtn_fotomasino"
        android:layout_alignTop="@+id/imgbtn_fma"
        android:layout_alignLeft="@+id/imgbtn_earth"
        android:layout_alignStart="@+id/imgbtn_earth"
        android:onClick="fotomasino"/>


    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/lingkode_logo"
        android:id="@+id/imgbtn_lingkoder"
        android:layout_marginTop="59dp"
        android:onClick="lingkoder"
        android:layout_below="@+id/imgbtn_euust"
        android:layout_alignLeft="@+id/imgbtn_euust"
        android:layout_alignStart="@+id/imgbtn_euust" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/mediatrix_logo"
        android:layout_alignTop="@+id/imgbtn_lingkoder"
        android:layout_centerHorizontal="true"
        android:id="@+id/mediatrix"
        android:onClick="mediatrix" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textAppearance="?android:attr/textAppearanceSmall"
         android:text="More Organizations Soon"
         android:id="@+id/textView2"
         android:layout_marginTop="23dp"
         android:layout_below="@+id/mediatrix"
         android:layout_centerHorizontal="true" />


 </RelativeLayout>

</ScrollView>